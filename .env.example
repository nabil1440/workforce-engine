# Copy to .env and adjust values as needed.

# API and worker ports (host side)
API_PORT=8080
AUDIT_WORKER_PORT=8081

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=workforce
POSTGRES_PASSWORD=workforce
POSTGRES_DB=workforce

# Mongo
MONGO_CONNECTION_STRING=mongodb://mongo:27017
MONGO_DATABASE=workforce
MONGO_PORT=27017

# RabbitMQ
RABBITMQ_HOSTNAME=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE_PREFIX=workforce.events
RABBITMQ_AUDIT_QUEUE=workforce.audit
RABBITMQ_AUDIT_RETRY_QUEUE=workforce.audit.retry
RABBITMQ_AUDIT_DLQ=workforce.audit.dlq
RABBITMQ_MAX_RETRIES=3
RABBITMQ_RETRY_BASE_DELAY_SECONDS=5
RABBITMQ_MANAGEMENT_PORT=15672

# Audit worker health endpoint
AUDIT_HEALTH_URL=http://0.0.0.0:8081
